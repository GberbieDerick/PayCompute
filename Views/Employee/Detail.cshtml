@model EmployeeDetailViewModel



<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card ">



        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item active " aria-current="page">
                       Detail Employee
                    </li>

                </ol>

            </nav>

            <br /><br />
            <div class="wrap d-flex justify-content-start justify-content-sm-center flex-wrap">
                <img class="rounded-circle shadow-lg" style="width:300px; height:350px;" src="@Url.Content(Model.ImageURL)" alt=""/>
                <div class="wrap align-items-center ml-5">
                    <p class="font-weight-bold text-success" style="font-size:20px;">@Model.FullName</p>
                    <p class="font-weight-normal" style="font-size:20px;">Role:@Model.Designation</p>
                    <p class="font-weight-normal" style="font-size:20px;">Gender : @Model.Gender</p>
                    <p class="font-weight-normal" style="font-size:20px;">Date of Birth: @Model.Dob.ToString("dd/MM/yyyy")</p>
                    <p class="font-weight-normal" style="font-size:20px;"> Employee No: @Model.EmployeeNo</p>
                    <p class="font-weight-normal" style="font-size:20px;">N I: @Model.NationalInsurance</p>
                    <p class="font-weight-normal" style="font-size:20px;">Phone Number: @Model.Phone</p>
                    <p class="font-weight-normal" style="font-size:20px;"> Email:<a href="#">@Model.Email</a> </p>

                    <br /><br />
                    <p class="font-weight-bold">Pay &amp;Deductions</p>
                    <hr style="background-color:crimson;" />
                    <p class="font-weight-normal" style="font-size:20px;"> Payment Method: @Model.PaymentMethod</p>

                    <p class="font-weight-normal" style="font-size:20px;"> Student Loan: @Model.StudentLoan</p>
                    <p class="font-weight-normal" style="font-size:20px;"> Union Member: @Model.UnionMember</p>
                    <p class="font-weight-normal" style="font-size:20px;"><i class="fas fa-envelope" style="margin-right:0.6em; color:cornflowerblue;"></i><a href="mailto:@Model.Email?Subject=Payslip&body=Attached within is your payslip">Send Payslip</a></p>

                    <br /><br />

                    <p class="font-weight-bold">Address </p>
                    <hr style="background-color:crimson;" />

                    <p class="font-weight-normal" style="font-size:20px;">@Model.Address</p>

                    <p class="font-weight-normal" style="font-size:20px;">@Model.City</p>
                    <p class="font-weight-normal" style="font-size:20px;">@Model.PostCode</p>







                </div>

            </div>

            


        </div>
    </div>


</div>





@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}